  "license": "MIT",
  "main": "_index.scss",
  "keywords": [
    "scss",
    "sass",
    "css",
    "styles",
    "stylesheet",
    "multi",
    "multi-purpose",
    "partial",
    "export",
    "mixin",
    "dynamic"
  ],
  "scripts": {
    "lint": "yarn stylelint \"*.scss\"",
    "test": "jest --config __tests__/jest.config.js"
  },
  "dependencies": {
    "sass": "^1.83.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "sass-loader": "^16.0.4",
    "sass-true": "^8.1.0",
    "stylelint": "^16.14.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0"
  }
}
